{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/server.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1",
            "headers": {
                "cache-control": "s-maxage=0"
            }
        }
    ]
}